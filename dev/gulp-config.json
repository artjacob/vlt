{
	"server": {
		"host": "ftp.emitremmus.org",
		"path": "/home/artjacob/emitremmus.com",
		"auth": "artjacob"
	},
	"html": {
		"watch": [
			"**/**.pug"
		],
		"source": [
			"./source/pug/infoinvest.pug"
		],
		"destination": {
			"local": "./public/",
			"remote": "/"
		}
	},
	"css": {
		"watch": [
			"**/**.scss"
		],
		"source": [
			"./source/scss/app.scss"
		],
		"destination": {
			"local": "./public/assets/",
			"remote": "/assets.laguinho.org/lista/"
		}
	},
	"js": {
		"watch": [
			"**/**.js",
			"**/**.json"
		],
		"source": [
			"./source/js/infoinvest.js"
		],
		"destination": {
			"local": "./public/assets/",
			"remote": "/-/"
		}
	},
	"assets": [
		{
			"title": "service-worker",
			"type": "js",
			"source": "./source/assets/service-worker.js",
			"destination": {
				"local": null,
				"remote": "/",
				"filename": "service-worker.js"
			}
		},
		{
			"title": "manifest",
			"type": "json",
			"source": "./source/assets/manifest.json",
			"destination": {
				"local": null,
				"remote": "/",
				"filename": "manifest.json"
			}
		}
	]
}
